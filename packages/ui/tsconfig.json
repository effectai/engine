{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@effectai/ui",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "paths": {
    "@/*": ["./src/*"]
		},
  },  "include": ["src"]
}

