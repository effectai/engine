{
  "name": "@effectai/protocol",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm run build:node && pnpm run build:browser",
    "build:node": "tsup ./src/node.ts --config ../../tsup.config.package.ts",
    "build:browser": "tsup ./src/browser.ts --config ../../tsup.config.browser.ts",
    "test": "vitest",
    "format": "pnpm biome format --write . --config-path ../../biome.json",
    "generate": "protons ./src/core/protocol/task/task.proto",
    "simulate": "node --experimental-strip-types ./tests/simulate.ts"
  },
  "types": "./dist/node.d.ts",
  "main": "./dist/node.js",
  "module": "./dist/node.js",
  "exports": {
    ".": {
      "types": "./dist/node.d.ts",
      "browser": "./dist/browser.browser.mjs",
      "import": "./dist/node.js",
      "default": "./dist/node.js"
    }
  },
  "dependencies": {
    "@effectai/protocol-core": "workspace:*",
    "@effectai/protobufs": "workspace:*",
    "@effectai/worker": "workspace:*",
    "@effectai/manager": "workspace:*",
    "@effectai/payment": "workspace:*"
  },
  "devDependencies": {
    "@effectai/test-utils": "workspace:*",
    "@solana/web3.js": "^1.98.2",
    "@biomejs/biome": "1.9.4",
    "@types/circomlibjs": "^0.1.6",
    "@types/cors": "^2.8.5",
    "@types/express": "^5.0.1",
    "@types/snarkjs": "^0.7.9",
    "protobufjs-cli": "^1.1.3",
    "protons": "^7.6.0",
    "turbo": "^2.4.2",
    "typescript": "^5.8.2",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
